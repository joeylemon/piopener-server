{
    "env": {
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": [
        "standard",
        "plugin:promise/recommended",
        "plugin:import/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "src/routes/docs/html"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ]
    }
}